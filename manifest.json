{
  "manifest_version": 2,
  "name": "ChatGPT Citation Generator",
  "version": "1.0",
  "description": "Generates BibLaTeX citations from chat conversations with OpenAI's ChatGPT.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}